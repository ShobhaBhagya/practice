pipeline{
agent any
        stages{
            stage('Build-System details'){
                steps{
                    sh '''
                    echo '"ip-address"'
                    hostname -I
                      '''
                }
            }
            stage('Build-Memory details'){
                step{
                   sh '''
                    echo "MEMORY DETAILS"
                    free -mh
                    '''
                }
            }
            stage('Build-CPU details'){
                steps{
                    sh '''
                    echo "CPU DETAILS"
                    lscpu
                    '''
                }
            }
            stage('Todays date'){
                steps{
                    sh '''
                    echo "TODAYS DATE"
                    date
                    '''
                }
            }
            stage('process command'){
                steps{
                    sh '''
                    echo "Process command"
                    ps -ef | tail -10
                    '''
                }
            }

        }
}
